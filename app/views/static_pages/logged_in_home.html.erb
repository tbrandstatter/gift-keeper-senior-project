<% provide(:title, 'All gfitboards') %>
<h1>Gift Lists</h1>

<%= link_to "Create Gift List", giftboard_path, class: "btn btn-lg btn-primary" %>


<ul class="giftboards">
  <% @giftboards.each do |giftboard| %>
    <li>
      <%= link_to giftboard.name, idea_path(id: giftboard.id) %>
     |<%= link_to "delete", deletegiftboard_path(id: giftboard.id), method: :delete,
                                  data: { confirm: "Are you sure you want to delete this gift list?" } %>
    </li>
  <% end %>
</ul>

