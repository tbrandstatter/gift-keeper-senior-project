<body class="subtle" >
<% provide(:title, 'Giftboard') %>
<h1 id="giftlist">Create Giftlist</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:giftboard, url: giftboard_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :birthday %>
      <%= f.date_field :birthday, class: 'form-control' %>


      <%= f.submit "Create Giftboard", class: "btn btn-unique" %>
    <% end %>
  </div>
</div>